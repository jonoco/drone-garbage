extends layout

block content
    div.status
        <table style="width:100%">
            <thead>
                <tr>
                    <th>Team</th>
                    <th>Status</th>
                    <th>Completion</th> 
                    <th>Time Remaining</th>
                    <th>Location</th>
                    <th>Controls</th>
                </tr>
            </thead>
            <tbody>
                each row, i in teams
                    tr
                        td= row['id']
                        td= row['status']
                        td= row['completion']
                        td= row['timeRemaining']
                        td= row['location']
                        td
                            button details
        </table>